@startuml
!theme mars
skinparam linetype ortho

package "PostgreSQL - Database: fleet_db" {
    
    namespace telemetry_schema {
        
        enum TripStatus {
            PENDING_ANALYSIS
            PROCESSING
            COMPLETED
            FAILED
        }

        entity "trip_logs" as trips {
            * id : UUID <<PK>>
            --
            * vehicle_id : UUID
            * driver_id : UUID
            * timestamp : TIMESTAMP
            
            * telemetry_blob : JSON 
            note: Heavy sensor data\nstored as JSON array
            
            * status : VARCHAR(50) <<TripStatus>>
            * created_at : TIMESTAMP
            --
            INDEX(vehicle_id)
            INDEX(status)
        }

        entity "driver_scores" as scores {
            * id : UUID <<PK>>
            --
            * trip_id : UUID <<FK, UK>>
            
            * safety_score : INTEGER
            note: 0 to 100
            
            * harsh_braking_count : INTEGER
            * rapid_accel_count : INTEGER
            
            * created_at : TIMESTAMP
            --
            INDEX(trip_id)
        }

        ' Relationship
        trips ||..|| scores : "generates 0..1"
    }
}
@enduml